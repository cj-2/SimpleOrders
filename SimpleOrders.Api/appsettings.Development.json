{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServer": "localhost:9092",
    "Topics": [
      {
        "Name": "tp-create-orders"
      }
    ]
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Queues": [
      {
        "Name": "create.orders",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "Key": "create",
        "Exchanges": [
          "Orders"
        ]
      },
      {
        "Name": "update.orders",
        "Durable": true,
        "Exclusive": false,
        "AutoDelete": false,
        "Key": "update",
        "Exchanges": [
          "Orders"
        ]
      }
    ],
    "Exchanges": [
      {
        "Name": "Orders",
        "Type": "direct"
      }
    ]
  }
}
